.PHONY: clean install_deps lint

clean:
	@find . -iname '*.py[co]' -delete
	@find . -iname '__pycache__' -delete
	@rm -rf  '.pytest_cache'
	@rm -rf dist/
	@rm -rf build/
	@rm -rf *.egg-info
	@rm -rf poetry.lock
	@rm -rf .tox
	@rm -rf venv/lib/python*/site-packages/*.egg
	poetry cache clear


install_deps:
	poetry install

lint:
	tox -e lint